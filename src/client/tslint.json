{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "rules": {
    "max-classes-per-file": [false],
    "ordered-imports": false,
    "semicolon": true,
    "object-literal-sort-keys": false,    
    "member-ordering": [false],
    "no-console": false,
    "quotemark": [
      true,
      "double"
    ]
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  }
}
